<?xml version="1.0"?>
<odoo>
        <record model="ir.ui.view" id="view_form_opportunity_linkedin">
            <field name="name">CRM Opportunity Linkedin</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_form_view_oppor"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='lost_reason']" position="after">
                    <field name="lost_reason_info" attrs="{'invisible': [('lost_reason', '=', False)]}"/>
                </xpath>
            </field>
        </record>
</odoo>
